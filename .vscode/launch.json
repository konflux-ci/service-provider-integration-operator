    "version": "0.2.0",
    "configurations": [
        {
            "name": "SPI Operator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/main.go",
            "args": ["-metrics-bind-address", "0"],
            "env": {
                "KUBECONFIG": "${workspaceFolder}/.tmp/test-kubeconfig",
                "SPI_URL": "http://localhost:8080",
                "SPI_BEARER_TOKEN_FILE": "${workspaceFolder}/.token"
            },
            "preLaunchTask": "prepare",
        },
    ]
}